pipeline {
    agent any
    
    tools { go 'go1.21' }
    
    options {
        timestamps()
        ansiColor("xterm")
        buildDiscarder(logRotator(numToKeepStr: '5', daysToKeepStr: '1', artifactNumToKeepStr: '30'))
    }
    
    // Can change
    environment {
        FMC_HOST="172.16.133.47"
        FMC_USERNAME="admin"
        FMC_PASSWORD="Cisco@123"
        FTD_HOST='172.16.133.48'
        FMC_INSECURE_SKIP_VERIFY='true'
    }
    
    // same as env but immutable
    // parameters {
    // string(name: 'GIT_URL', defaultValue: 'https://github.com/205101-retr0/terraform-provider-fmc-netascode.git/', description: 'project url')
    // }

     stages {
        // To add more stages for the github actions...

        stage('Lint') {
            steps {
                script {
                    last_started = env.STAGE_NAME
                }
                build job: 'Linting Errors', wait: true
            }
        }

        stage('Build') {
            steps {
                script {
                    last_started = env.STAGE_NAME
                    sh 'chmod +x .jenkins/build.sh'
                    sh '.jenkins/build.sh'
                }
            }
           
        }

        // stage('Test') {
        //     steps {
        //         script {
        //             last_started = env.STAGE_NAME
        //             sh 'chmod +x .jenkins/test.sh'
        //             sh '.jenkins/test.sh'
        //         }
        //     } 
        // }
    }
    post {
        success {
          script {
                def commitInfo = sh(script: 'git log -1  --pretty=format:"%H %ae %an %s"', returnStdout: true).trim()
                def commitDetails = commitInfo.split(' ')

                def commitHash = commitDetails[0]
                def commitEmail = commitDetails[1]
                def commitAuthor = commitDetails[2]
                def commitSubject = commitDetails[3..-1].join(' ')

                emailext subject: "Success - Build #${env.BUILD_NUMBER} - ${env.BUILD_STATUS}",
                          body: """
                                The build was successful. \n
                                Original pusher: $commitAuthor ($commitEmail)
                                Commit Subject: $commitSubject

                                Build URL: $BUILD_URL
                          """,
                          to: "teande@cisco.com, ${commitEmail}" 
            }
        }

        failure {
          script {
                def commitInfo = sh(script: 'git log -1  --pretty=format:"%H %ae %an %s"', returnStdout: true).trim()
                def commitDetails = commitInfo.split(' ')

                def commitHash = commitDetails[0]
                def commitEmail = commitDetails[1]
                def commitAuthor = commitDetails[2]
                def commitSubject = commitDetails[3..-1].join(' ')

                // def failedStage = currentBuild.rawBuild.getResult().getDisplayName()
                def failedStage = ${last_started}

                def consoleOutput = currentBuild.rawBuild.getLog(1000).join('\n')

                emailext subject: "Failure - Build #${env.BUILD_NUMBER} - ${failedStage}",
                          body: """
                                The build failed. \n
                                Original pusher: $commitAuthor ($commitEmail)
                                Commit Subject: $commitSubject

                                Build URL: $BUILD_URL

                                Build Log: $consoleOutput
                          """,
                          to: "teande@cisco.com, ${commitEmail}" 
            }
        }

        cleanup {
            cleanWs()
        }
    }
}